#Suspend, Hibernate, Poweroff, and Reboot
bindsym $mod+Home mode "$mode_command"
set $mode_command [l]ock [s]uspend [h]ibernate [p]oweroff [r]eboot [e]xit


mode  "$mode_command" {
	bindsym l exec python ~/.config/i3/commands.py --lock, mode "default"
	bindsym s exec python ~/.config/i3/commands.py --suspend, mode "default"
	bindsym h exec python ~/.config/i3/commands.py --hibernate, mode "default"
	bindsym p exec python ~/.config/i3/commands.py --poweroff, mode "default"
	bindsym r exec python ~/.config/i3/commands.py --reboot, mode "default"
	bindsym e exec ~/scripts/command.sh none, mode "default"
}



